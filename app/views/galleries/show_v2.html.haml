#gallery-content.content
  .slideshow-container
    .row
      .column
        - images[0...8].each do |img|
          = image_tag img
      .column
        - images[8...14].each do |img|
          = image_tag img
      .column
        - images[14...23].each do |img|
          = image_tag img

#myModal.modal
  %span.close
    &times;
  %img#img01.modal-content

:javascript
  if (!document.audio) {
    var audio = new Audio('beautiful_in_white.mp3');
    audio.loop = true;
    audio.play();
    document.audio = audio;
  }

  $('.column img').on('click', function(e){
    $('#myModal').css('display', 'block');
    $('#img01').attr('src', $(e.target).attr('src'));
  });

  $('#myModal .close').on('click', function(e) {
    $('#myModal').css('display', 'none');
  });